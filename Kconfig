mainmenu "dragonRTOS Configuation"

menu "General"
	config ARCH
		int "CONFIG ARCH riscv32 = 1, riscv64 = 2, arm32 = 3, arm64 = 4"
		default 1
		range 1 4
		help
			riscv32 = 1, riscv64 = 2, arm32 = 3, arm64 = 4

	config CROSS_COMPILE
		string "cross compile path"

	source "arch/Kconfig"
	source "platform/Kconfig"
endmenu

